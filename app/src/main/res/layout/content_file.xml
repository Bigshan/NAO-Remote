<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ryanwedoff.senor.naoservercontroller.FileActivity"
    tools:showIn="@layout/activity_file">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/check"
        android:id="@+id/run_pause_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textOff="PAUSED "
        android:textOn="RUNNING "
        android:background="@color/colorAccent"
        android:layout_margin="1dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        android:layout_toEndOf="@id/run_pause_button"
        android:layout_alignParentBottom="true"
        android:onClick="onRestart"
        android:background="@color/colorAccent"
        android:drawableStart="@drawable/ic_replay_white_24dp"
        android:id="@+id/restart_button"
        android:layout_margin="1dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Clear"
        android:layout_toEndOf="@id/restart_button"
        android:layout_alignParentBottom="true"
        android:onClick="onClear"
        android:background="@color/colorAccent"
        android:drawableStart="@drawable/ic_not_interested_white_24dp"
        android:id="@+id/clear_button"
        android:layout_margin="1dp"/>


    <android.support.v7.widget.RecyclerView
        android:layout_centerHorizontal="true"
        android:id="@+id/file_list_view"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/run_pause_button" />




</RelativeLayout>
